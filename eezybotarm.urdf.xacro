<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="eezybotarm">

    <!-- Materials -->
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>

    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <!-- Base Joint -->
    <joint name="base_joint" type="revolute">
        <parent link="base_link"/>
        <child link="shoulder_link"/>
        <origin xyz="0 0 0.025" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="0" upper="3.14159" effort="1000" velocity="1.0"/>
        <safety_controller k_position="100"
                          k_velocity="10"
                          soft_lower_limit="0.1"
                          soft_upper_limit="3.04159"/>
    </joint>

    <!-- Shoulder Link -->
    <link name="shoulder_link">
        <visual>
            <geometry>
                <box size="0.1 0.05 0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- Shoulder Joint -->
    <joint name="shoulder_joint" type="revolute">
        <parent link="shoulder_link"/>
        <child link="upper_arm_link"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="1.22" effort="1000" velocity="1.0"/>  <!-- 70 degrees -->
        <safety_controller k_position="100"
                          k_velocity="10"
                          soft_lower_limit="0.1"
                          soft_upper_limit="1.12"/>
    </joint>

    <!-- Upper Arm Link -->
    <link name="upper_arm_link">
        <visual>
            <geometry>
                <box size="0.15 0.05 0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- Elbow Joint -->
    <joint name="elbow_joint" type="revolute">
        <parent link="upper_arm_link"/>
        <child link="forearm_link"/>
        <origin xyz="0.15 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="1.48" upper="2.97" effort="1000" velocity="1.0"/>  <!-- 85 to 170 degrees -->
        <safety_controller k_position="100"
                          k_velocity="10"
                          soft_lower_limit="1.58"
                          soft_upper_limit="2.87"/>
    </joint>

    <!-- Forearm Link -->
    <link name="forearm_link">
        <visual>
            <geometry>
                <box size="0.1 0.04 0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- Gripper Joint -->
    <joint name="gripper_joint" type="revolute">
        <parent link="forearm_link"/>
        <child link="gripper_link"/>
        <origin xyz="0.1 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="0.35" upper="1.75" effort="1000" velocity="1.0"/>  <!-- 20 to 100 degrees -->
        <safety_controller k_position="100"
                          k_velocity="10"
                          soft_lower_limit="0.45"
                          soft_upper_limit="1.65"/>
    </joint>

    <!-- Gripper Link -->
    <link name="gripper_link">
        <visual>
            <geometry>
                <box size="0.03 0.03 0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <!-- ros2_control integration -->
    <ros2_control name="EEZYbotARM" type="system">
        <hardware>
            <plugin>eezybotarm_control/EEZYbotHardware</plugin>
            <param name="example_param">1</param>
        </hardware>
        <joint name="base_joint">
            <command_interface name="position"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
        <joint name="shoulder_joint">
            <command_interface name="position"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
        <joint name="elbow_joint">
            <command_interface name="position"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
        <joint name="gripper_joint">
            <command_interface name="position"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
    </ros2_control>

</robot>
